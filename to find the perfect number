#include<stdio.h>
void main()
{
    int n,num,sum;
    printf("enter a integer:");
    scanf("%d",&n);
    for(int i=1;i<=n/2;i++)
    {
        if (n%i==0)
        {
            sum+=i;
        }
        
    }
    if(sum==n&&n>0)
    {
        printf("%d \nis a perfect number",n);
    }
    else
    printf("%d\n is not a perfect number",n);
}
